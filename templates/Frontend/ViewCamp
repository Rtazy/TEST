<script>
    function toggleLanguage() {
        var elements = document.querySelectorAll('.form-container');
        elements.forEach(function(element) {
            if (element.lang === 'en') {
                element.lang = 'ar';
            } else {
                element.lang = 'en';
            }
        });
    }
</script>

